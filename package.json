{
  "name": "zen-starter",
  "description": "A lightweight starter kit for modern static site markup with Vite, TypeScript, and SCSS. Perfect for quick integration into any CMS.",
  "author": "Dmytro Frolov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmitroconquer/zen-starter.git"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "host": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "deploy": "npm run build && node scripts/deploy.js",
    "deploy:only": "node scripts/deploy.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "lenis": "^1.3.17",
    "micromodal": "^0.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/micromodal": "^0.3.5",
    "autoprefixer": "^10.4.23",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "ftp-deploy": "^2.4.7",
    "globals": "^17.0.0",
    "postcss": "^8.5.6",
    "postcss-combine-media-query": "^2.1.0",
    "postcss-scss": "^4.0.9",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.7.4",
    "sass": "^1.97.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.3.1",
    "vite-plugin-handlebars": "^2.0.0"
  }
}
